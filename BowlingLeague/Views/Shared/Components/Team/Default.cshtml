@model IEnumerable<BowlingLeague.models.Team>
<h1>@ViewBag.Title</h1>

<a class="btn btn-primary" asp-action="Index" asp-controller="Home" asp-route-team="">Home</a>
<br />
<br />

<!--Displays team buttons-->
@foreach (var x in Model)
{

    <a class="btn @(x.TeamName == ViewBag.Title ? "btn-primary" : "btn-secondary") mya" asp-action="Index" asp-controller="Home" asp-route-team="@x.TeamId" asp-route-teamName="@x.TeamName">@x.TeamName</a>
    <br />
    <br />

}
